<h1>{{model.fullName}}</h1>

<div class="row">
  <div class="col-md-2">
    <h4>Reviews</h2>
    <table class="table text-center">
      <tbody>
        {{#each review in model.reviews}}
          <tr>
            <td>
              {{#link-to 'reviews.show' review.id }} {{format-date review.date}} {{/link-to}}
            </td>
          </tr>
        {{else}}
          <h1>No reviews</h1>
          <p>Someone's been slacking</p>
        {{/each}}
      </tbody>
    </table>
    <button type="button" {{action "createReview"}} class="btn btn-default">Add new</button>
  </div>
  <div class="col-md-10">
    {{outlet}}
  </div>
</div>
